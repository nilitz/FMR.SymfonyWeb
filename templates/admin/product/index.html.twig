{% extends 'base.html.twig' %}
{% block body %}
<div class="container mt-4">
    <h1 class="display-4 text-center mt-5">Gestion des Produits</h1>
    {% for message in app.flashes('success') %}
        <hr class="my-5">
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <hr class="my-5">
    <div class="text-center">
        <a href="{{ path("admin.products.new") }}" class="btn btn-success mb-5" style="vertical-align: center"><i class="fas fa-plus"></i></a>
        <a href="#" class="btn btn-warning mb-5" style="vertical-align: center"><i class="fas fa-download"></i></a>
    </div>
    <table class="table table-striped text-center">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Prod. max. total.</th>
            <th>Prod. max. indiv.</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.maxProduction }}</td>
                <td>{{ product.maxUser }}</td>
                <td>
                    <a href="#" class="btn btn-info"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('admin.products.edit', {id: product.id}) }}" class="btn btn-dark"><i class="fas fa-edit"></i></a>
                    <form method="post" action="{{ path('admin.products.delete', {id: product.id}) }}" style="display: inline-block;" onsubmit="return confirm('Voulez vous vraiment effectuer l action ?')">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                        <button class="btn btn-danger"><i class="fas fa-trash"></i></button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>

</div>
{% endblock %}