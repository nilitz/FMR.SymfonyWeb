{% extends 'base.html.twig' %}

{% block body %}
    <a class="nav-link" href="{{ path('admin.machines.index') }}"><i class="fas fa-chevron-circle-left"></i></a>
    <div class="container mt-4">
        <h1 class="display-4 text-center mt-5">Modifier un Machine</h1>
        {% for message in app.flashes('success') %}
            <hr class="my-5">
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <hr class="my-5">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-success" style="width: 100%"><i class="fas fa-edit"></i></button>
        {{ form_end(form) }}
    </div>
{% endblock %}