{% for product in products %}
    <article class="card-fmr">
        <header class="card-img-fmr">
            <img src="https://picsum.photos/370/235">
        </header>
        <div class="card-body-fmr">
            <div class="card-number-fmr">
                <span class="card-number-1-fmr">15</span>
                <div class="white-line"></div>
                <span class="card-number-2-fmr">50</span>
            </div>
            <div class="card-category-fmr"><a href="#">Category</a></div>
            <div class="card-title-fmr">Title</div>
            <div class="card-subtitle-fmr">Subtitle</div>
            <p class="card-description-fmr">
                Le lorem ipsum est, en imprimerie, une suite de mots sans signification utilisée à titre provisoire pour calibrer une mise en page, le texte définitif venant remplacer le faux-texte dès qu'il est prêt ou que la mise en page est achevée.
            </p>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
        <footer class="card-footer-fmr btn-grid">
        {% else %}
        <footer class="card-footer-fmr text-center">
        {% endif %}
            <a href="#" class="see-css"><i class="fas fa-eye"></i></a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin.products.edit', {id: product.id}) }}" class="edit-css"><i class="fas fa-edit"></i></a>
            <form id="form-product-delete" method="post" action="{{ path('admin.products.delete', {id: product.id}) }}" style="display: inline-block;" onsubmit="return confirm('Voulez vous vraiment effectuer l action ?')">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                <a href="#"  class="delete-css" onclick="document.getElementById('form-product-delete').submit()"><i class="fas fa-trash"></i></a>
            </form>
            {% endif %}
        </footer>
    </article>
{% endfor %}