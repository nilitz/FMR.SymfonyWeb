<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}FabManagerRenew{% endblock %}</title>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
            <!-- CSS only -->
            <link rel="stylesheet" href="{{ asset('assets/css/sidebar.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/content.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/grid/grid-qhd.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/card.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/card-show.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/order.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/table.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/faq-card.css') }}">
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        {% endblock %}
    </head>

    <body>
        <nav class="top-bar">
            <div class="sidebar">
                <ul>
                    <li><p class="title"><span class="sidebar-title">UTILISATEUR</span><span class="sidebar-icon"><i class="fas fa-user"></i></span></p></li>
                    <div class="title-border-line"></div>
                    <li><a href="{{ path("home.index") }}">Home<span class="sidebar-icon"><i class="fas fa-home"></i></span></a></li>
                    <li><a href="{{ path("faq.index") }}">FAQ<span class="sidebar-icon"><i class="fas fa-question-circle"></i></span></a></li>
                    <div class="border-line"></div>
                    {% if app.user %}
                        <li><a href="{{ path("products.index") }}">Produits<span class="sidebar-icon"><i class="fas fa-shopping-cart"></i></span></a></li>
                        <div class="border-line"></div>
                        <li><a href="#">Profil<span class="sidebar-icon"><i class="fas fa-user-circle"></i></span></a></li>
                        <li><a href="{{ path("security.logout") }}">Se Déconnecter<span class="sidebar-icon"><i class="fas fa-user-slash"></i></span></a></li>
                        <div class="border-line"></div>
                        <li><a href="{{ path("machine.index") }}">Réserver une machine<span class="sidebar-icon"><i class="fas fa-cogs"></i></span></a></li>
                        <li><a href="#">Réserver des outils<span class="sidebar-icon"><i class="fas fa-tools"></i></span></a></li>
                    {% else %}
                        <li><a href="{{ path("security.registration") }}">S'enregister<span class="sidebar-icon"><i class="fas fa-user-plus"></i></span></a></li>
                        <li><a href="{{ path("security.login") }}">Se Connecter<span class="sidebar-icon"><i class="fas fa-user-check"></i></span></a></li>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                    <li><p class="title"><span class="sidebar-title">ADMINISTRATION</span><span class="sidebar-icon"><i class="fas fa-user-cog"></i></span></p></li>
                    <div class="title-border-line"></div>
                    <li><a href="#">Gérer les utilisateurs<span class="sidebar-icon"><i class="fas fa-user-circle"></i></span></a></li>
                    <div class="border-line"></div>
                    <li><a href="{{ path("admin.faq.index") }}">Gérer la FAQ<span class="sidebar-icon"><i class="fas fa-question-circle"></i></span></a></li>
                    <div class="border-line"></div>
                    <li><a href="#">Gérer les machines<span class="sidebar-icon"><i class="fas fa-cogs"></i></span></a></li>
                    <li><a href="#">Réservations de machines<span class="sidebar-icon"><i class="fas fa-calendar"></i></span></a></li>
                    <div class="border-line"></div>
                    <li><a href="#">Gérer l'inventaire<span class="sidebar-icon"><i class="fas fa-warehouse"></i></span></a></li>
                    <li><a href="#">Réservation d'outils<span class="sidebar-icon"><i class="fas fa-calendar"></i></span></a></li>
                    <div class="border-line"></div>
                    <li><a href="{{ path("admin.products.index") }}">Gérer les produits<span class="sidebar-icon"><i class="fas fa-shopping-cart"></i></span></a></li>
                    <li><a href="{{ path("admin.orders.index") }}">Gérer les commandes<span class="sidebar-icon"><i class="fas fa-luggage-cart"></i></span></a></li>
                    {% endif %}
                </ul>
            </div>
            <div class="sidebar-btn">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </nav>
        <div class="page-content">
            {% block body %}{% endblock %}
        </div>



        {% block javascripts %}
            <!-- JS, Popper.js, and jQuery -->
            <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
            <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
            <script src="{{ asset('assets/js/sidebar.js') }}" type="text/javascript"></script>
            <script src="{{ asset('assets/js/next.js') }}" type="text/javascript"></script>
{% endblock %}
    </body>
</html>
