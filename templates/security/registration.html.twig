        {{ form_row(form.password, {'label' : 'Mot de passe', 'attr' : {'placeholder' : 'Mot de passe'}}) }}
        {{ form_row(form.category, {'label' : 'Category', 'attr' : {'placeholder' : 'Cat√©gorie'}}) }}

        <button class="btn btn-dark">S'inscrire</button>
        {{ form_end(form) }}
    </div>
{% endblock %}